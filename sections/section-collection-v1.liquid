{% if section.settings.fonts_sub_1 !=blank %}
<link href="https://fonts.googleapis.com/css2?family={{section.settings.fonts_sub_1}}:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
{% endif %}

<div data-section-id="{{ section.id }}" data-section-type="section-collection-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-collection-v1 mt-all text-center" style="background: {{section.settings.bg_section}}">
    <div class="container container-v2">
      <div  class="wpb_wrapper" >
        {% if section.settings.sub_heading != blank %}
        <h3 class="sub_heading text-center sub_heading{{section.id}}" style="color: {{section.settings.color_sub_title}}">{{section.settings.sub_heading}}</h3>
        {% endif %}
        {% if section.settings.title_heading != blank %}
        <h3 class="title_heading text-center" style="color: {{section.settings.color_title}}">{{section.settings.title_heading}}</h3>
        {% endif %}
      </div>
      <div class="row no-gutters js-collection-v1">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == 'colection' %}
        <div class="col-lg-4 col-md-4 col-sm-6 col-12 col-item">
          <div class="item">
            <div class="box-img">
              <a href="{{block.settings.brand_url}}" title="{{block.settings.title_collection}}">
                {% if block.settings.brand_img != blank %}
                <img data-src="{{block.settings.brand_img | img_url:'master'}}" class="lazyload img-fluid w-100" alt="_img_collection">
                {% else %}
                <img data-src="//via.placeholder.com/456x456" class="lazyload img-fluid w-100" alt="_img_collection">
                {% endif %}
              </a>
            </div>
            <div class="category-info">
              <div class="box-info">
                {% if block.settings.title_collection != blank %}
                <a href="{{block.settings.brand_url}}" class="title-collection">{{block.settings.title_collection}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %} 
      </div>
    </div>
  </div>
</div>
<style>
  .section-collection-v1 .wpb_wrapper .sub_heading{{section.id}} {    
    color:{{section.settings.color_block_title_top1}};
    {% if section.settings.fonts_sub_1 != blank %}
    font-family: '{{section.settings.fonts_sub_1}}';
      {% endif %}
  }
</style>
