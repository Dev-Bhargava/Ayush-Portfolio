<div data-section-id="{{ section.id }}" data-section-type="section-flash-sale-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="">
    <div class="lazyload" {% if section.settings.ena_background_img %} {% if section.settings.bg_image != blank %} data-bg="{{section.settings.bg_image | img_url : 'master'}}"  style=" background-size : cover ;" {% endif %} {% else %} style="background-color : {{section.settings.bg_color}}" {% endif %}  >
      <div class="section-flash-sale-v2 pt-all" >
        <div class="container container-v2">
          <div class="row">
            <div class="col-12 col-md-5  content-banner">
              <div class=" heading ">
                {% if section.settings.sub_title != blank %}
                <p class="sub-title-heading mb-0" style="color: {{section.settings.color_sub_title_heading}}">{{section.settings.sub_title}}</p>
                {% endif %}
                {% if section.settings.title_section_product != blank%}      
                <h3 class=" title-heading"style="color: {{section.settings.color_title_heading}}">{{section.settings.title_section_product}}</h3>      
                {% endif %}
                {% if section.settings.sub_title_banner != blank %}
                <p class="sub-title" style="color: {{section.settings.color_sub_title}}">{{section.settings.sub_title_banner}}</p>
                {% endif %}
                <div class="button-banner">
                  {% if section.settings.button_banner != blank %}
                  <a href="{{section.settings.url_banner}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner}}</a>
                  {% endif %}
                </div>
              </div>    
            </div>
            <div class="col-12 col-md-7 ">
              <div class="row product_new slick_product_flashsale_v2">
                {% assign products_limit = section.settings.products_limit %}
                {% assign col = section.settings.select_collection %}
                {% for product in collections[col].products limit: products_limit %}
                <div class="col-12">
                  {% include 'product-item-v1' %}
                </div>
                {% else %}
                {% for i in (1..12) %}
                <div class="col-12">
                  {% include 'empty-product-item' %}
                </div>
                {% endfor %}
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .section-flash-sale-v2 .button-banner .button-shop-{{ section.id }} {
    color: {{section.settings.color_btn}};
    background: {{section.settings.bg_btn}};
    border: 1px solid {{section.settings.color_border_button}};
  }
  .section-flash-sale-v2 .button-banner .button-shop-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background:{{section.settings.bg_hover_btn}};
    border-color: {{section.settings.color_hover_border}} ;

  }
</style>
