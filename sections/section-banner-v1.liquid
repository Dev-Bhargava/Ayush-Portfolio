<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1 ">
    <div>
      <div class="row" style="margin:auto 0;">        
        <div class="col-lg-4 col-md-4">
          <div class="box-banner ">
            <div class="box-img">
              <a href="{{section.settings.url_banner1}}">
                <img data-src=" {% if section.settings.img_banner1 != blank %}{{section.settings.img_banner1 | img_url:'master'}} {% else %}//via.placeholder.com/1000x646{% endif %}" class="lazyload w-100 img-fluid" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              <div class="info-banner-top">
                <a href="{{section.settings.url_button1}}">
                  {% if section.settings.title_1 != blank %}
                  <h3 class="title title-{{ section.id }}">{{section.settings.title_1}}</h3>
                  {% endif %} 
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 ">
          <div class="box-banner " >
            <div class="box-img">
              <a href="{{section.settings.url_banner2}}">
                <img data-src="{% if section.settings.img_banner2 != blank %} {{section.settings.img_banner2 | img_url:'master'}} {% else %} //via.placeholder.com/1000x646{% endif %}" class="lazyload img-fluid w-100" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              <div class="info-banner-top">
                <a href="{{section.settings.url_button2}}">
                  {% if section.settings.title_2 != blank %}
                  <h3 class="title title-{{ section.id }}">{{section.settings.title_2}}</h3>
                  {% endif %} 
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 ">
          <div class="box-banner ">
            <div class="box-img">
              <a href="{{section.settings.url_banner3}}">
                <img data-src="{% if section.settings.img_banner3 != blank %} {{section.settings.img_banner3 | img_url:'master'}} {% else %} //via.placeholder.com/1000x646{% endif %}" class="lazyload img-fluid w-100" alt="_img">
              </a>
            </div>
            <div class="info-banner">
              <div class="info-banner-top">
                <a href="{{section.settings.url_button3}}">
                  {% if section.settings.title_3 != blank %}
                  <h3 class="title title-{{ section.id }}">{{section.settings.title_3}}</h3>
                  {% endif %} 
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .section-banner-v1 .box-banner .info-banner .info-banner-top .title-{{ section.id }} {
    color: {{section.settings.color_title}};
  }
  .section-banner-v1 .box-banner .info-banner .info-banner-top .title-{{ section.id }}:hover {
    color: {{section.settings.color_hover_title}};
  }
  .section-banner-v1.section-banner-v1 .box-banner:after {
    border-color: {{section.settings.border_banner}};
  }

</style>

